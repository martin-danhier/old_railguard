{
    "env": {
        "defaultIncludePath": [
            "${workspaceFolder}",
            "${workspaceFolder}/include",
            "${workspaceFolder}/include/**"
        ]
    },
    "configurations": [
        {
            "name": "Vulkan dev",
            "intelliSenseMode": "gcc-x64",
            "includePath": [
                "${defaultIncludePath}",
                "${VULKAN_SDK}/Include",
                "${workspaceFolder}/external/glm",
                "${workspaceFolder}/external/vma",
                "${workspaceFolder}/external/vk-bootstrap/src",
                "${SDL2_PATH}/include"
            ],
            "cppStandard": "c++20",
            "configurationProvider": "numaru.vscode-cmake-lite"
        }
    ],
    "version": 4
}